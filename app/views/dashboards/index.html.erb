<%= column_chart @column_data, stacked: true, prefix: "$", thousands: "," %>
<%= pie_chart Dashboard.group(:type).sum(:amount) %>
<br>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboards.each do |e| %>
      <tr>
        <td><%= e.date %></td>
        <td><%= e.description %></td>
        <td><%= e.type %></td>
        <td><%= e.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>